<com.ryansteckler.nlpunbounce.ExpandingLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutDetails"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?activityRootBackground"
    android:visibility="visible"
    tools:context="com.ryansteckler.nlpunbounce.WakelockDetailFragment">


    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:alpha="1"
            android:orientation="vertical"
            android:visibility="visible">


            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_external_padding"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="?cardBackground"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="?background_secondary_shaded"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/card_internal_padding"
                    android:paddingEnd="@dimen/card_internal_padding"
                    android:paddingLeft="@dimen/card_internal_padding"
                    android:paddingRight="@dimen/card_internal_padding"
                    android:paddingStart="@dimen/card_internal_padding"
                    android:paddingTop="@dimen/card_internal_padding">

                    <ImageView
                        android:layout_width="@dimen/header_icon_size"
                        android:layout_height="@dimen/header_icon_size"
                        android:contentDescription="@string/card_description_title"
                        android:src="@drawable/ic_description" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lb_description"
                            style="@style/TextTitleLight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/pad_icon"
                            android:layout_marginStart="@dimen/pad_icon"
                            android:enabled="false"
                            android:text="@string/card_description_title" />

                        <TextView
                            style="@style/TextCaptionLight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/pad_icon"
                            android:layout_marginStart="@dimen/pad_icon"
                            android:text="@string/card_description_subtitle" />

                    </LinearLayout>

                    <ImageButton
                        android:id="@+id/btnSearch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="#00000000"
                        android:src="@drawable/ic_action_search" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/card_internal_padding">

                    <TextView
                        android:id="@+id/textViewDescription"
                        style="?cardText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha=".87"
                        android:text="@string/desc_unknown" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_external_padding"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="?cardBackground"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="?background_secondary_shaded"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/card_internal_padding"
                    android:paddingLeft="@dimen/card_internal_padding"
                    android:paddingRight="@dimen/card_internal_padding"
                    android:paddingTop="@dimen/card_internal_padding">

                    <ImageView
                        android:layout_width="@dimen/header_icon_size"
                        android:layout_height="@dimen/header_icon_size"
                        android:contentDescription="@string/card_settings_title"
                        android:src="@drawable/ic_settings" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lb_settings"
                            style="@style/TextTitleLight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/pad_icon"
                            android:layout_marginStart="@dimen/pad_icon"
                            android:enabled="false"
                            android:text="@string/card_settings_title" />

                        <TextView
                            style="@style/TextCaptionLight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/pad_icon"
                            android:layout_marginStart="@dimen/pad_icon"
                            android:text="@string/card_settings_subtitle_wakelock" />

                    </LinearLayout>

                    <Switch
                        android:id="@+id/switchStat"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="1" />


                </LinearLayout>


                <LinearLayout
                    android:id="@+id/settingsPanel"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:background="?background_panel_disabled"
                    android:orientation="horizontal"
                    android:padding="@dimen/card_internal_padding">

                    <TextView
                        style="?cardText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/card_external_padding"
                        android:layout_marginRight="@dimen/card_external_padding"
                        android:layout_weight=".25"
                        android:text="@string/settings_allow_every" />

                    <EditText
                        android:id="@+id/editWakelockSeconds"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal"
                        android:layout_weight=".35"
                        android:gravity="center_horizontal"
                        android:imeOptions="actionDone"
                        android:inputType="number"
                        android:lines="1"
                        android:maxLength="7"
                        android:maxLines="1"
                        android:textAlignment="center" />

                    <TextView
                        style="?cardText"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/card_external_padding"
                        android:layout_marginStart="@dimen/pad_icon"
                        android:layout_weight=".45"
                        android:text="@string/settings_seconds" />
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_external_padding"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="?cardBackground"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:background="?background_secondary_shaded"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/card_internal_padding"
                    android:paddingLeft="@dimen/card_internal_padding"
                    android:paddingStart="@dimen/card_internal_padding"
                    android:paddingTop="@dimen/card_internal_padding"
                    tools:ignore="RtlSymmetry">

                    <ImageView
                        android:layout_width="@dimen/header_icon_size"
                        android:layout_height="@dimen/header_icon_size"
                        android:contentDescription="@string/card_local_title"
                        android:src="@drawable/ic_local_secondary" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="fill_parent"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/lb_local"
                            style="@style/TextTitleLight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/pad_icon"
                            android:layout_marginStart="@dimen/pad_icon"
                            android:enabled="false"
                            android:text="@string/card_local_title" />

                        <TextView
                            style="@style/TextCaptionLight"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/pad_icon"
                            android:layout_marginStart="@dimen/pad_icon"
                            android:text="@string/card_local_subtitle" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/buttonResetStats"
                        style="@style/TextButtonLight"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="1"
                        android:background="?reset_button_background"
                        android:clickable="true"
                        android:enabled="true"
                        android:focusable="true"
                        android:gravity="center_vertical"
                        android:paddingBottom="@dimen/card_external_padding"
                        android:paddingEnd="@dimen/flat_button_long_padding"
                        android:paddingLeft="@dimen/card_external_padding"
                        android:paddingRight="@dimen/flat_button_long_padding"
                        android:paddingStart="@dimen/card_external_padding"
                        android:paddingTop="@dimen/card_external_padding"
                        android:text="@string/card_button_reset" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/card_internal_padding">

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="?cardText"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/stat_wake_duration_allowed" />

                        <TextView
                            android:id="@+id/textLocalTimeAllowed"
                            style="?cardTextValues"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:text="@string/stat_loading" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="?cardText"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/stat_wake_duration_blocked" />

                        <TextView
                            android:id="@+id/textLocalTimeBlocked"
                            style="?cardTextValues"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:text="@string/stat_loading" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="?cardText"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/stat_wake_allowed" />

                        <TextView
                            android:id="@+id/textLocalAcquired"
                            style="?cardTextValues"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:text="@string/stat_loading" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="fill_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            style="?cardText"
                            android:layout_width="0dp"
                            android:layout_height="fill_parent"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:text="@string/stat_wake_blocked" />

                        <TextView
                            android:id="@+id/textLocalBlocked"
                            style="?cardTextValues"
                            android:layout_width="wrap_content"
                            android:layout_height="fill_parent"
                            android:gravity="center_vertical"
                            android:text="@string/stat_loading" />

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>
</com.ryansteckler.nlpunbounce.ExpandingLayout>
